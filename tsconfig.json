{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "lib": ["es5", "es6", "dom"],
        "strictNullChecks": true
    },
    "awesomeTypescriptLoaderOptions": { // see https://github.com/storybookjs/storybook/issues/7829
        "ignoreDiagnostics": [7005, 2300]
    },
    "include": [
        "./src/**/*"
    ]
}
